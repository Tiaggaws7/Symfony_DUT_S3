<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <header/>
    {% block header %}
    {#<nav class="navbar sticky-top navbar-dark bg-dark">#}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('prostages_accueil') }}">Prostages</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('listeStages') }}">Stages </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('listeEntreprises') }}">Entreprises</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{ path('listeFormations') }}">Formations</a>
                </li>
            </ul>
        </div>
    </nav>
    {% endblock %}
    </header>
    <body>
        {% block body %}{% endblock %}
    </body>
    <footer>
        <div class="container bg-dark">
            <p class="m-0 text-center text-white">Site réalisé par Tiago Buil</p>
        </div>
    {% block footer %}{% endblock %}
    </footer>
</html>
